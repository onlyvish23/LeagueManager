@model LeagueManager.Models.MailerModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
<script  type="text/javascript">

    $(document).ready(function () {
        if ('@ViewBag.Message' != null && '@ViewBag.Message'!="") {
            alert('@ViewBag.Message');
        }
    });


</script>
<h2>Index</h2>

@using (Html.BeginForm("Index", "Email", FormMethod.Post, new { @id = "form1", @enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MailerModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SendTo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SendTo)
            @Html.ValidationMessageFor(model => model.SendTo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Subject)
            @Html.ValidationMessageFor(model => model.Subject)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Body)
            @Html.ValidationMessageFor(model => model.Body)
        </div>

        <div class="editor-label">
           Mail Attachment :
        </div>
        <div class="editor-field">
            <input type="file" name="fileUploader" />
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
