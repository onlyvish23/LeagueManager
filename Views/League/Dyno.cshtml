<script type="text/javascript">
    $(document).ready(function (e) {

        $("#btnAdd").click(function () {
            var ctr = $("#MyTable tr").length;
            var input1 = "<input type='text' id='mytxt" + ctr + "' maxlength='20' class='.txt' name='playername'></input>";
            var btnDelete1 = "";
